{
  "name": "markdown-live",
  "displayName": "Markdown Live",
  "description": "real-time markdown UI composer",
  "publisher": "keshshan",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.44.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCustomEditor:markdown-live.showEditor"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/KeshShan/markdown-live.git"
  },
  "icon": "icons/marketplace.png",
  "galleryBanner": {
    "color": "#111111",
    "theme": "dark"
  },
  "preview": true,
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "markdown-live.showEditor",
        "displayName": "Markdown Live Panel",
        "selector": [
          {
            "filenamePattern": "*.md"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js",
    "build": "rimraf out && yarn compile",
    "package-ext": "vsce package",
    "publish-ext": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.44.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "eslint": "^6.8.0",
    "@typescript-eslint/parser": "^2.26.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.1",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0",
    "husky": "^2.3.0",
    "pretty-quick": "^1.11.0",
    "prettier": "1.17.1",
    "all-contributors-cli": "^6.6.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
